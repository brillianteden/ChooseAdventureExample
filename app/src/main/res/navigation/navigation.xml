<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation"
            app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/titleFragment"
              android:name="jenn.codes.chooseadventureexample.TitleFragment"
              android:label="fragment_title"
              tools:layout="@layout/fragment_title">
        <action android:id="@+id/endAction"
                app:destination="@id/endFragment"
                app:exitAnim="@anim/fade_out"/>
    </fragment>

    <fragment android:id="@+id/endFragment"
              android:name="jenn.codes.chooseyourownadventure.EndFragment"
              android:label="fragment_end"
              tools:layout="@layout/fragment_end">
        <action android:id="@+id/restartAction"
                app:destination="@id/splashFragment"
                app:exitAnim="@anim/fade_out"/>
        <argument android:name="mStoryIndex"
                  app:argType="integer"
                  android:defaultValue="1"/>
    </fragment>
    <fragment android:id="@+id/splashFragment"
              android:name="jenn.codes.chooseadventureexample.SplashFragment"
              android:label="fragment_splash"
              tools:layout="@layout/fragment_splash">
        <action android:id="@+id/startAction"
                app:destination="@id/titleFragment"
                app:exitAnim="@anim/fade_out"/>
    </fragment>
</navigation>